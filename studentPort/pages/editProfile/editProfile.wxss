.container {
  min-height: 100vh;
  display: block;
  background-color: #f5f7fa;
  padding: 30rpx 24rpx;
}

.form-group {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 24rpx;
  position: relative;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  position: relative;
}

.form-item::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 1rpx;
  background: #f5f5f5;
}

.form-item:last-child::after {
  display: none;
}

.label {
  width: 160rpx;
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.input {
  flex: 1;
  height: 44rpx;
  font-size: 30rpx;
  color: #333333;
  padding: 0;
  background: transparent;
}

.picker {
  flex: 1;
}

.picker-value {
  font-size: 30rpx;
  color: #333333;
}

.tips {
  padding: 20rpx 30rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

.button-group {
  padding: 48rpx 30rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1890ff;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.15);
  transition: all 0.3s ease;
}

.save-btn::after {
  border: none;
}

.save-btn:active {
  opacity: 0.85;
  transform: translateY(2rpx);
}

/* 输入框placeholder样式 */
.input::placeholder {
  color: #cccccc;
}

/* 密码输入框样式 */
.password-input {
  flex: 1;
  height: 44rpx;
  font-size: 30rpx;
  color: #333333;
  padding: 0;
  letter-spacing: 2rpx;
  background: transparent;
}

/* 表单组标题 */
.group-title {
  font-size: 28rpx;
  color: #999999;
  padding: 32rpx 0 16rpx;
  font-weight: normal;
} 