<view class="container">
  <view class="header">
    <view class="title">我的成绩</view>
    <view class="summary">
      <view class="average-box">
        <text class="average-value">{{averageScore}}</text>
        <text class="average-label">平均分</text>
      </view>
    </view>
  </view>

  <view class="grade-list">
    <view class="grade-item" wx:for="{{allGrades}}" wx:key="id">
      <view class="course-name">{{item.name}}</view>
      <view class="grade-score {{item.score >= 90 ? 'excellent' : item.score >= 80 ? 'good' : item.score >= 60 ? 'pass' : 'fail'}}">
        {{item.score}}
      </view>
    </view>
  </view>
</view> 