.container {
  padding: 30rpx 24rpx;
  min-height: 100vh;
  background-color: #f5f7fa;
    display: block;
}

/* 统计卡片 */
.stats-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  position: relative;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stats-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #1890ff;
  line-height: 1.2;
}

.stats-label {
  font-size: 26rpx;
  color: #666666;
}

.stats-divider {
  width: 2rpx;
  height: 80rpx;
  background: #f0f0f0;
}

/* 成绩列表 */
.grade-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.grade-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.grade-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.grade-info {
  flex: 1;
  margin-right: 20rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.course-id {
  font-size: 26rpx;
  color: #999999;
}

.grade-score {
  font-size: 40rpx;
  font-weight: 600;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  min-width: 100rpx;
  text-align: center;
}

/* 成绩等级样式 */
.excellent {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.good {
  color: #1890ff;
  background: rgba(24, 144, 255, 0.1);
}

.pass {
  color: #faad14;
  background: rgba(250, 173, 20, 0.1);
}

.fail {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
}

/* 空数据提示 */
.empty-tip {
  text-align: center;
  padding: 120rpx 0;
  color: #999999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.empty-tip::before {
  content: '';
  width: 200rpx;
  height: 200rpx;
  background: rgba(24, 144, 255, 0.1);
  border-radius: 50%;
  margin-bottom: 20rpx;
} 