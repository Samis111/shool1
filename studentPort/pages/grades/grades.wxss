.container {
  padding: 30rpx 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: block;
}

.header {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin: 0 0 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.summary {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

.average-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f8f8f8;
  padding: 20rpx 60rpx;
  border-radius: 8rpx;
}

.average-value {
  font-size: 56rpx;
  font-weight: bold;
  color: #1890ff;
  line-height: 1;
  margin-bottom: 12rpx;
}

.average-label {
  font-size: 26rpx;
  color: #999;
}

.grade-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.grade-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin: 0;
}

.grade-item:last-child {
  border-bottom: none;
}

.course-name {
  font-size: 34rpx;
  color: #333;
  flex: 1;
  padding-right: 30rpx;
}

.grade-score {
  font-size: 44rpx;
  font-weight: bold;
  min-width: 100rpx;
  text-align: right;
}

.excellent {
  color: #52c41a;
}

.good {
  color: #1890ff;
}

.pass {
  color: #faad14;
}

.fail {
  color: #ff4d4f;
} 