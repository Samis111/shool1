/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: block;
}

.header {
  padding: 30rpx 10rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  display: flex;
  margin-bottom: 20rpx;
}

.course-cover {
  width: 200rpx;
  height: 260rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.course-cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.course-abbr {
  font-size: 80rpx;
  font-weight: bold;
  color: rgba(0,0,0,0.2);
}

.course-content {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.course-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.course-teacher {
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.course-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.course-intro {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.course-type {
  font-size: 24rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  width: 140rpx;
}

.info-value {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.course-footer {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 40rpx;
}

.credit-info, .hours-info {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.credit-value, .hours-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
}

.credit-label, .hours-label {
  font-size: 24rpx;
  color: #999;
}

/* 用户信息卡片样式 */
.user-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.student-id, .class-info, .department {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 6rpx;
  display: block;
}

/* 功能区样式 */
.function-area {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 10rpx 20rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #1890ff;
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.function-icon {
  position: relative;
  margin-bottom: 10rpx;
}

.function-icon image {
  width: 80rpx;
  height: 80rpx;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.function-name {
  font-size: 28rpx;
  color: #333;
}

/* 通知区域样式 */
.notice-area {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.notice-list {
  display: flex;
  flex-direction: column;
}

.notice-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-tag {
  background-color: #e6f7ff;
  color: #1890ff;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.notice-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

/* 周数选择器样式 */
.week-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.week-btn {
  padding: 10rpx 30rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.current-week {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 课程区域公共样式 */
.today-courses,
.weekly-courses {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.course-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

/* 课程网格布局 */
.course-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 0 20rpx;
}
