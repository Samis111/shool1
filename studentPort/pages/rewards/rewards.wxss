.container {
  padding: 30rpx 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin: 0 0 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.record-list {
  width: 100%;
  box-sizing: border-box;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
}

.record-item.reward {
  border-left: 8rpx solid #52c41a;
}

.record-item.punishment {
  border-left: 8rpx solid #ff4d4f;
}

.record-content {
  flex: 1;
  padding-right: 20rpx;
}

.student-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.record-time {
  font-size: 26rpx;
  color: #999;
}

.record-desc {
  font-size: 30rpx;
  color: #666;
  line-height: 1.5;
}

.record-tag {
  font-size: 26rpx;
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
  font-weight: bold;
}

.reward .record-tag {
  background: #f6ffed;
  color: #52c41a;
}

.punishment .record-tag {
  background: #fff1f0;
  color: #ff4d4f;
} 