.container {
  min-height: 100vh;
  padding: 40rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.logo-section {
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 24rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.login-section {
  width: 100%;
  margin-top: 80rpx;
}

.welcome-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 60rpx;
  text-align: center;
}

.login-box {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding: 0 20rpx;
}

.wechat-login-btn, .phone-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  gap: 12rpx;
}

.wechat-login-btn {
  background-color: #07C160;
  color: #ffffff;
}

.phone-login-btn {
  background-color: #F5F5F5;
  color: #333333;
  border: 2rpx solid #E5E5E5;
}

.wechat-icon, .phone-icon {
  width: 44rpx;
  height: 44rpx;
}

.privacy-policy {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  margin-bottom: 40rpx;
}

.link {
  color: #07C160;
} 