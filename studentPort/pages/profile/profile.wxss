/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 30rpx 24rpx;
  display: block;
}

/* 用户信息卡片 */
.user-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

.avatar-wrapper {
  margin-right: 30rpx;
  padding: 0;
  width: 120rpx !important;
  height: 120rpx !important;
  border-radius: 60rpx;
  background: none;
  position: relative;
  overflow: visible;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.edit-hint {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.camera-icon {
  position: absolute;
  right: -6rpx;
  bottom: -6rpx;
  width: 40rpx;
  height: 40rpx;
  background: #1890ff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-icon .iconfont {
  color: #fff;
  font-size: 24rpx;
}

.user-info {
  flex: 1;
  margin-right: 20rpx;
}

.nickname-input {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  padding: 0;
  border: none;
  width: 100%;
  background: transparent;
}

.student-id {
  font-size: 26rpx;
  color: #999999;
}

.wx-login-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #07c160;
  color: #fff;
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  border: none;
  line-height: 1.4;
  min-width: auto;
}

.wx-login-btn::after {
  border: none;
}

/* 设置列表 */
.settings-list {
  width: 100%;
  box-sizing: border-box;
}

.settings-group {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 30rpx;
  position: relative;
}

.settings-item::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 1rpx;
  background: #f5f5f5;
}

.settings-item:last-child::after {
  display: none;
}

.settings-item:active {
  background-color: #f9f9f9;
}

.item-label {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.item-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.item-value text {
  font-size: 28rpx;
  color: #999999;
}

.icon-arrow {
  color: #cccccc;
  font-size: 24rpx;
  margin-left: 8rpx;
}

/* 退出登录按钮 */
.logout-button {
  margin-top: 48rpx;
  background: #ffffff;
  color: #ff4d4f;
  font-size: 32rpx;
  text-align: center;
  padding: 32rpx;
  border-radius: 16rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  position: relative;
  overflow: hidden;
}

.logout-button:active {
  background-color: #fff1f0;
}